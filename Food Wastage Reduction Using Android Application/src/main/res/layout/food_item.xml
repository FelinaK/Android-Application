<?xml version="1.0" encoding="utf-8"?>

    <!-- res/layout/food_item.xml -->

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:background="@color/white"
android:orientation="vertical"
android:padding="16dp">

<!-- ImageView for food image -->
<ImageView
    android:id="@+id/imageViewFood"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="50dp"
    android:layout_marginTop="30dp"
    android:scaleType="centerCrop"
    android:src="@drawable/placeholder_image"
  android:contentDescription="@string/food_image_description" />

<!-- TextView for food name -->
<TextView
    android:id="@+id/foodNameTextView"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    android:textStyle="bold"
    android:textSize="18sp" />

<!-- TextView for food quantity -->
<TextView
    android:id="@+id/quantityTextView"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp" />

<!-- TextView for donor name -->
<TextView
    android:id="@+id/donorNameTextView"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp" />

</LinearLayout>